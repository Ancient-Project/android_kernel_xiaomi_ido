#!/sbin/sh
# AnyKernel2 Backend
# osm0sis @ xda-developers

OUTFD=/proc/self/fd/$2;
ZIP="$3";
DIR=`dirname "$ZIP"`;

ui_print() {
  until [ ! "$1" ]; do
    echo -e "ui_print $1\nui_print" > $OUTFD;
    shift;
  done;
}
show_progress() { echo "progress $1 $2" > $OUTFD; }
set_perm_recursive() {
  dirs=$(echo $* | awk '{ print substr($0, index($0,$5)) }');
  for i in $dirs; do
    chown -R $1:$2 $i;
    find "$i" -type d -exec chmod $3 {} +;
    find "$i" -type f -exec chmod $4 {} +;
  done;
}
file_getprop() { grep "^$2" "$1" | cut -d= -f2; }
getprop() { test -e /sbin/getprop && /sbin/getprop $1 || file_getprop /default.prop $1; }
cleanup() { rm -rf /tmp/anykernel; }
if [ "$(file_getprop /tmp/anykernel/anykernel.sh do.cleanuponabort)" == 1 ]; then
    abort() { ui_print "$*"; cleanup; umount /system; umount /data; exit 1; }
  else
    abort() { ui_print "$*"; umount /system; umount /data; exit 1; }
fi;

show_progress 1.34 4;
cleanup;
mkdir -p /tmp/anykernel;
cd /tmp/anykernel;
unzip -o "$ZIP";
if [ $? != 0 -o -z "$(ls /tmp/anykernel/tools)" ]; then
  abort "Unzip failed. Aborting...";
fi;
set_perm_recursive 0 0 0777 0777 /tmp/anykernel;
set_perm_recursive 0 0 0755 0755 /tmp/anykernel/tools;

ui_print " ";
ui_print "=====================";
ui_print " KudKernel Installer";
ui_print "=====================";
ui_print "Powered by AnyKernel2";

mount -o ro -t auto /system;
mount /data;

if [ "$(file_getprop /tmp/anykernel/anykernel.sh do.devicecheck)" == 1 ]; then
  ui_print "- Checking device...";
  testname="$(file_getprop /tmp/anykernel/anykernel.sh device.name)";
  if [ "$(getprop ro.product.device)" == "$testname" -o "$(getprop ro.build.product)" == "$testname" ]; then
    match=1;
    ui_print "i Device supported.";
  fi;
  if [ "$match" != 1 ]; then
    abort "! Device unsupported. Aborting...";
  fi;
fi;

ui_print "- Flashing kernel...";
ash /tmp/anykernel/anykernel.sh $2;
if [ $? != "0" ]; then
  abort "! Installation failed. Aborting...";
fi;

ui_print "- Patching system...";
mount -o rw,remount -t auto /system;
ash /tmp/anykernel/kudkernel.sh $2;
mount -o ro,remount -t auto /system;
if [ $? != "0" ]; then
  abort "! Patching failed. Aborting...";
fi;

if [ "$(file_getprop /tmp/anykernel/anykernel.sh do.modules)" == 1 ]; then
  ui_print "- Pushing modules...";
  mount -o rw,remount -t auto /system;
  cp -rf /tmp/anykernel/modules/* /system/lib/modules/;
  set_perm_recursive 0 0 0755 0644 /system/lib/modules;
  mount -o ro,remount -t auto /system;
fi;

if [ "$(file_getprop /tmp/anykernel/anykernel.sh do.cleanup)" == 1 ]; then
  ui_print "- Cleaning temporary files...";
  cleanup;
fi;

umount /system;
umount /data;
ui_print "- Kernel installed.";
ui_print "i Enjoy the release!";
ui_print " ";
